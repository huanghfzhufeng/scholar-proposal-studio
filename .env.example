# App
NEXT_PUBLIC_APP_NAME=scholar-proposal-studio

# LLM (MiniMax)
USE_REAL_LLM=false
MINIMAX_API_KEY=
MINIMAX_BASE_URL=https://api.minimax.io/anthropic
MINIMAX_MODEL=MiniMax-M2.5
MINIMAX_ANTHROPIC_VERSION=2023-06-01
MINIMAX_MAX_TOKENS=2048

# Search (Tavily)
USE_REAL_SEARCH=false
TAVILY_API_KEY=

# Database
USE_PRISMA_STORAGE=true
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/scholar_proposal_studio

# Docker Compose (optional overrides)
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=scholar_proposal_studio
POSTGRES_PORT=5432
APP_PORT=3000
