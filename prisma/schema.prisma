generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id        String   @id @default(cuid())
  title     String
  status    String
  deletedAt DateTime?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model OutlineVersion {
  id        String   @id @default(cuid())
  projectId String
  version   Int
  content   Json
  createdAt DateTime @default(now())
}

model Source {
  id        String   @id @default(cuid())
  projectId String
  title     String
  url       String
  score     Float
  selected  Boolean  @default(false)
  createdAt DateTime @default(now())
}

model DraftVersion {
  id        String   @id @default(cuid())
  projectId String
  version   Int
  content   String
  createdAt DateTime @default(now())
}
